= bootstrap_form_for @place, layout: :horizontal, label_col: "col-sm-3 text-right", control_col: "col-sm-8" do |f|
  - if @place.errors.any?
    #error_explanation
      %h2= t('errors.template.header', model: @place.model_name.human)
      %p=  t('errors.template.body')
      %ul
        - @place.errors.full_messages.each do |message|
          %li= message
  
  = f.text_field :name,    wrapper: {class: "mb-1"}
  = f.text_field :address, wrapper: {class: "mb-1"}
  = f.text_field :hood,    wrapper: {class: "mb-1"}
  = f.text_field :city,    wrapper: {class: "mb-1"}
  = f.text_field :postcode
  
  = f.phone_field :phone,  wrapper: {class: "mb-1"}
  = f.email_field :email,  wrapper: {class: "mb-1"}
  = f.url_field   :website
  
  .row.justify-content-center
    = f.submit class: "btn btn-primary mx-1"
    = link_to t('cancel'), places_path, class: "btn btn-secondary mx-1"

%h1= t('.title')

%table
  %thead
    %tr
      %th= User.human_attribute_name(:name)
      %th= User.human_attribute_name(:email)
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.name
        %td= user.email
        %td= link_to t('show'), user_path(user)
        %td= link_to t('edit'), edit_user_path(user)
        %td= link_to t('destroy'), user_path(user), method: :delete, data: { confirm: t('.confirm', name: user.name) }
